{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "version": "{{env `VERSION`}}",
    "region": "us-east-1",
    "package": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "ami_name": "elotl-kipdev-{{user `version`}}"
    },
  {
      "type": "googlecompute",
      "account_file": "account.json",
      "project_id": "excellent-ion-277200",
      "source_image": "ubuntu-1604-xenial-v20200429",
      "ssh_username": "packer",
      "zone": "us-central1-a"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while ! grep \"Cloud-init .* finished\" /var/log/cloud-init.log; do echo \"$(date -Ins) Waiting for cloud-init to finish\"; sleep 2; done"
      ]
    },
    {
      "type": "file",
      "source": "{{user `package`}}",
      "destination": "/tmp/{{user `package`}}"
    },
    {
      "type": "shell",
      "inline_shebang": "/usr/bin/env bash",
      "inline": [
          "set -e -x",
          "sudo apt-get update -y",
          "sudo apt-get install -y iproute2 ipset iptables nfs-common ssl-cert",
          "sudo dpkg -i /tmp/{{user `package`}}",
          "itzo --version",
          "sudo rm -rf /root/.ssh",
          "sudo rm -rf /home/ubuntu/.ssh"
      ]
    }
  ]
}
