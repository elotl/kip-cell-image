{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "gce_zone": "{{env `GCE_ZONE`}}",
    "gce_project_id": "{{env `GCE_PROJECT_ID`}}",
    "gce_account_file": "{{ env `GOOGLE_CLOUD_KEYFILE_JSON`}}",
    "version": "{{env `VERSION`}}",
    "package": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "ami_name": "elotl-kipdev-{{user `version`}}",
      "ami_groups": [
          "all"
      ]
    },
  {
      "type": "googlecompute",
      "account_file": "{{user `gce_account_file`}}",
      "project_id": "{{user `gce_project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "ssh_username": "packer",
      "zone": "{{user `gce_zone`}}",
      "image_name": "elotl-kipdev-{{user `version` | replace_all \".\" \"-\" }}",
      "image_family": "elotl-kipdev"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while ! grep \"Cloud-init .* finished\" /var/log/cloud-init.log; do echo \"$(date -Ins) Waiting for cloud-init to finish\"; sleep 2; done"
      ]
    },
    {
      "type": "file",
      "source": "{{user `package`}}",
      "destination": "/tmp/{{user `package`}}"
    },
    {
      "type": "file",
      "source": "google-fluentd-cell.conf",
      "destination": "/tmp/google-fluentd-cell.conf"
    },
    {
      "type": "shell",
      "inline_shebang": "/usr/bin/env bash",
      "inline": [
          "set -e -x",
          "curl -sSO https://dl.google.com/cloudagents/add-logging-agent-repo.sh",
          "sudo bash add-logging-agent-repo.sh",
          "curl -sSO https://dl.google.com/cloudagents/add-monitoring-agent-repo.sh",
          "sudo bash add-monitoring-agent-repo.sh",
          "sudo add-apt-repository -y ppa:graphics-drivers/ppa",
          "DIST=$(. /etc/os-release; echo $ID$VERSION_ID)",
          "curl -s -L https://nvidia.github.io/libnvidia-container/gpgkey | sudo apt-key add -",
          "curl -s -L https://nvidia.github.io/libnvidia-container/$DIST/libnvidia-container.list | sudo tee /etc/apt/sources.list.d/libnvidia-container.list",
          "sudo apt-get update -y",
          "sudo apt-get install -y iproute2 ipset iptables nfs-common ssl-cert google-fluentd google-fluentd-catch-all-config-structured stackdriver-agent libnvidia-container-tools",
          "sudo apt-get install -y --no-install-recommends nvidia-cuda-toolkit nvidia-430",
          "sudo dpkg -i /tmp/{{user `package`}}",
          "sudo mv /tmp/google-fluentd-cell.conf /etc/google-fluentd/config.d/elotl-cell.conf",
          "echo -e '[IpForwarding]\nip_aliases = false\n' | sudo tee /etc/default/instance_configs.cfg.template",
          "sudo mkdir -p /var/lib/docker/containers",
          "sudo ln -snf /var/run/log/journal /var/log/journal",
          "sudo rm -rf /root/.ssh",
          "sudo rm -rf /home/packer/.ssh",
          "sudo rm -rf /home/ubuntu/.ssh",
          "itzo --version"
      ]
    }
  ]
}
