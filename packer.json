{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "gce_zone": "{{env `GCE_ZONE`}}",
    "gce_project_id": "{{env `GCE_PROJECT_ID`}}",
    "gce_account_file": "{{ env `GOOGLE_CLOUD_KEYFILE_JSON`}}",
    "version": "{{env `VERSION`}}",
    "package": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "aws-amd64",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "encrypt_boot": false,
      "ami_name": "elotl-kipdev-{{user `version`}}"
    },
    {
      "name": "aws-arm64",
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "elotl-kipdev-arm-{{user `version`}}",
      "encrypt_boot": false,
      "instance_type": "a1.medium",
      "region": "{{user `aws_region`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/*ubuntu-bionic-18.04-arm64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "099720109477"
        ]
      },
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    },
    {
      "account_file": "{{user `gce_account_file`}}",
      "project_id": "{{user `gce_project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "ssh_username": "packer",
      "image_name": "elotl-kipdev-{{user `version` | replace_all \".\" \"-\" }}",
      "image_family": "elotl-kipdev",
      "type": "googlecompute",
      "zone": "{{user `gce_zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while ! grep \"Cloud-init .* finished\" /var/log/cloud-init.log; do echo \"$(date -Ins) Waiting for cloud-init to finish\"; sleep 2; done"
      ]
    },
    {
      "type": "file",
      "source": "{{user `package`}}",
      "destination": "/tmp/{{user `package`}}"
    },
    {
      "type": "file",
      "only": [
        "aws-amd64", "aws-arm64"
      ],
      "source": "aws-fluentd-cell.conf",
      "destination": "/tmp/aws-fluentd-cell.conf"
    },
    {
      "type": "file",
      "only": [
          "googlecompute"
      ],
      "source": "google-fluentd-cell.conf",
      "destination": "/tmp/google-fluentd-cell.conf"
    },
    {
      "type": "shell",
      "only": [
        "aws-amd64"
      ],
      "environment_vars": [
        "KIP_PACKAGE={{user `package`}}"
      ],
      "script": "aws-provision.sh"
    },
    {
      "only": [
        "aws-arm64"
      ],
      "script": "aws-provision-arm.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "KIP_PACKAGE={{user `package`}}"
      ],
      "only": [
        "googlecompute"
      ],
      "script": "gce-provision.sh",
      "type": "shell"
    }
  ]
}
